<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  <h1>Matches</h1>

  <table class="table">
    <thead>
      <tr>
          <th>Title</th>
          <th>Description</th>
          <th>User</th>
          <th>Game</th>
          <th>Location</th>
          <th>Number of players</th>
          <th>Start at</th>
          <th>End at</th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @matches.each do |match| %>
        <tr>
            <td><%= match.title %></td>
            <td><%= match.description %></td>
            <td><%= match.user_id %></td>
            <td><%= match.game_id %></td>
            <td><%= match.location %></td>
            <td><%= match.number_of_players %></td>
            <td><%= match.start_at %></td>
            <td><%= match.end_at %></td>
            <td><%= link_to 'Show', match %></td>
          <td><%= link_to('Edit', edit_match_path(match)) if current_user == match.user %></td>
          <td><%= link_to('Destroy', match, method: :delete, data: { confirm: 'Are you sure?' }) if current_user == match.user  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @matches %>

  <br>

  <%= link_to 'New Match', new_match_path, class: "btn btn-success min-width-btn" %>

</div>