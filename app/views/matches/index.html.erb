<div class="container-fluid">
  <% if notice %>
    <div class="alert alert-info mt-3" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="jumbotron mt-3">
    <h4><%= t('.page_title') %></h4>
  </div>

  <%= render partial: 'shared/search_form', locals: { search_field: :title_or_user_username_or_game_name_cont }, class: 'mt-3' %>

  <div class="nav nav-pills mt-3 container justify-content-center">
    <li class="nav-item px-2">
      <%= sort_link(@q, :start_at, t('.start_at'), class: 'nav-link') %>
    </li>
    <li class="nav-item px-2">
      <%= sort_link(@q, :end_at, t('.end_at'), class: 'nav-link') %>
    </li>
    <li class="nav-item px-2">
      <%= sort_link(@q, :title, t('.title'), class: 'nav-link') %>
    </li>
    <li class="nav-item px-2">
      <%= sort_link(@q, :user_username, t('.creator'), class: 'nav-link') %>
    </li>
    <li class="nav-item px-2">
      <%= sort_link(@q, :game_name, t('.game'), class: 'nav-link') %>
    </li>
    <li class="nav-item px-2">
      <%= sort_link(@q, :number_of_players, t('.number_of_players'), class: 'nav-link') %>
    </li>
  </div>

  <div class="mt-3">
    <%= render partial: 'card_grid', locals: { matches: @matches } %>
  </div>

  <%= paginate @matches, class: 'mt-3' %>

  <%= link_to 'New Match', new_match_path, class: "btn btn-success btn-block mt-3" %>
</div>