<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(match.errors.count, "error" ) %> prohibited this match from being saved:
      </h2>

      <ul>
        <% match.errors.each do |error| %>
          <li>
            <%= error.full_message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <%= form.hidden_field :user_id, value: current_user.id %>

        <div class="form-group mb-3">
          <%= form.label :title, t('.title') , class: "form-label" %>
            <%= form.text_area :title, class:"form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :game_id, t('.game')  %>

            <%= form.collection_select :game_id, Game.all, :id, :name, { prompt: true }, { class: "form-select" } %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :number_of_players, t('.number_of_players') , class: "form-label" %>
            <%= form.number_field :number_of_players, class:"form-control" %>
        </div>

        <div id="search-username" class="form-group search-data mb-3" data-usernames="<%= @usernames.to_json %>">
          <%= form.label :invited_users, t('.invited_users') , class: "form-label" %>
          <%= form.text_field :invited_users, autocomplete: :off, class: "form-control search-input" , placeholder: "" %>
        </div>

        <div class="form-group mb-3">
          <%= form.check_box :creator_participates, { checked: true }, true, false %>
          <%= form.label :creator_participates, t('.creator_participates') , class: "form-check-label", for: "match_creator_participation" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :description, t('.description') , class: "form-label" %>
            <%= form.text_area :description, class:"form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :location, t('.location') , class: "form-label" %>
            <%= form.text_area :location, class:"form-control" %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :inicio, t('.inicio') , class: "form-label" %>
            <%= form.text_field :start_at, class: 'flatpickr form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= form.label :fin, t('.fin') , class: "form-label" %>
            <%= form.text_field :end_at, class: 'flatpickr form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= form.check_box :public, { checked: false }, true, false %>
          <%= form.label :public_match, t('.public_match') , class: "form-check-label", for: "match_creator_participation" %>
        </div>


        <div class="form-group mb-3">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
        <div class="col-md-auto"> </div>
<% end %>
