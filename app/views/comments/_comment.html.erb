<%= turbo_frame_tag comment do %>
  <div class="d-flex justify-content-between">
    <div>
      <%= comment.user.username %>
    </div>
    <div class="d-flex">
      <%= link_to t('.edit'), edit_comment_path(comment), class: 'mr-2' %>
      <%= button_to t('.delete'), comment_path(comment), method: :delete, data: { confirm: t('.confirm') }, class: 'mr-2' %>
    </div>
  </div>
    <%= comment.body %>
  </div>
<% end %>