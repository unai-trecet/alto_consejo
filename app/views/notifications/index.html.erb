<<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Notifications</h1>

  <table class="table">
    <thead>
      <tr>
          <th><%= t('message') %></th>
          <th><%= t('url') %></th>
          <th><%= t('created') %></th>
          <th><%= t('read') %></th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @notifications.each do |notification| %>
        <% nt = notification.to_notification %>
        <tr>
            <td><%= nt.message %></td>
            <td><%= nt.url %></td>
            <td><%= notification.created_at %></td>
            <td><%= notification.read_at %></td>
            <td><%= link_to 'Show', notification %></td>
          <td><%= link_to 'Destroy', notification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Notification', new_notification_path, class: "btn btn-success min-width-btn" %>

</div>>