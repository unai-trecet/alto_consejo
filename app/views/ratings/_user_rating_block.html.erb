<% if rating = user.rating_for(rateable) %>
  <%= render partial: 'ratings/user_rating_stars', locals: { rating: rating } %>
  <%= button_tag t('.change_rating'), type: 'button', data: { bs_toggle: "modal", bs_target: "#ratingModal" }, class: 'btn btn-primary btn-sm' %>
<% else %>
  <%= button_tag t('.rate_this_game'), type: 'button', data: { bs_toggle: "modal", bs_target: "#ratingModal" }, class: 'btn btn-primary' %>
<% end %>
<%= render partial: 'ratings/rating_modal', locals: { rateable: rateable, rating: rating } %>