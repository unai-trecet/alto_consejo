<div class="container-fluid">
  <p id="notice"><%= notice %></p>

      <div class="form-group mb-3">
    <p><strong><%= t('.name') %>:</strong></p>
    <div>
      <%= @game.name %>
    </div>
  </div>
  
      <div class="form-group mb-3">
    <p><strong><%= t('.description') %>:</strong></p>
    <div>
      <%= @game.description %>
    </div>
  </div>
  
      <div class="form-group mb-3">
    <p><strong><%= t('.author') %>:</strong></p>
    <div>
      <%= @game.author %>
    </div>
  </div>
  
      <div class="form-group mb-3">
    <p><strong><%= t('.added_by') %>:</strong></p>
    <div>
      <%= link_to(@game.added_by.username, @game.added_by) %>
    </div>
  </div>
  
      <div class="form-group mb-3">
    <p><strong><%= t('.played_matches') %>:</strong></p>
    <div>
      <%= @game.played_matches.count %>
    </div>
  </div>

      <div class="form-group mb-3">
    <p><strong><%= t('.planned_matches') %>:</strong></p>
    <div>
      <%= @game.planned_matches.count %>
    </div>
  </div>

      <div class="form-group mb-3">
    <p><strong><%= t('.num_players') %>:</strong></p>
    <div>
      <%= @game.players.count %>
    </div>
  </div>

      <div class="form-group mb-3">
    <p><strong><%= t('.bgg_link') %>:</strong></p>
    <div>
      <%= link_to(@game.bbg_link, @game.bbg_link) %>
    </div>
  </div>
  
      <div class="form-group mb-3">
    <p><strong><%= t('.picture') %>:</strong></p>
    <div>
      <%= @game.image %>
    </div>
  </div>
  
  
  <%= link_to 'Edit', edit_game_path(@game), class: "btn btn-primary min-width-btn" %>
  <%= link_to 'Back', games_path, class: "btn btn-light min-width-btn" %>
</div>

<h4><%= t('.comments') %></h4>
<%= turbo_frame_tag :comment_form do %>
  <%= render partial: 'comments/form', locals: { comment: Comment.new, commentable: @game } %>
<% end %>

<%= turbo_stream_from @game, :comments %>

<%= tag.div id: "#{dom_id(@game)}_comments" do %>
  <%= render partial: "comments/comment_with_replies", collection: @game.comments.where(parent_id: nil), as: :comment %>
<% end %>