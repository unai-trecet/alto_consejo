<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1><%= t('.page_title') %></h1>

  <table class="table">
    <thead>
      <tr>
          <th><%= t('.name') %></th>
          <th><%= t('.author') %></th>
          <th><%= t('.added_by') %></th>
          <th><%= t('.played_matches') %></th>
          <th><%= t('.bgg_link') %></th>
          <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>
        <tr>
            <td><%= link_to(game.name, game) %></td>
            <td><%= game.author %></td>
            <td><%= link_to(game.user.username, game.user) %></td>
            <td><%= game.played_matches.count %></td>
            <td><%= link_to(game.bbg_link, game.bbg_link) %></td>
          <td><%= link_to 'Edit', edit_game_path(game) if game.added_by == current_user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @games %>

  <br>

  <%= link_to 'New Game', new_game_path, class: "btn btn-success min-width-btn" %>

</div>