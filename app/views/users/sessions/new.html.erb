<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center mb-4">
        <img src="app-logo.svg" class="mb-3" alt="logo" width="72" height="72">
        <h1 class="h3 mb-3 fw-normal">Log in to Portal</h1>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-signin') do |f| %>
        <div class="form-floating mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder: "Email" %>
          <%= f.label :email %>
        </div>

        <div class="form-floating mb-3">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password", required: true %>
          <%= f.label :password %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="checkbox mb-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <%= f.submit "Log in", class: "w-100 btn btn-lg btn-primary" %>
      <% end %>

      <div class="mt-5 text-center">
        <%= render "users/shared/links" %>
      </div>

      <p class="mt-5 mb-3 text-muted text-center">&copy; 2024</p>
    </div>
  </div>
</div>